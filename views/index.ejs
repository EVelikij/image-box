<!DOCTYPE html>
<html>
  <head>
    <title>image box</title>
    <link rel='stylesheet' href='/stylesheets/vendors/bootstrap/bootstrap.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <script type="text/javascript" src='/js/app.js'></script>
  </head>
  <body ng-app="image-box">

    <div class="container">
      <div class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="#">Image Box</a>
          </div>
        </div>
      </div>

      <div class="row">

        <!-- sidebar menu -->
        <div class="col-md-3" id="sidebar">
          <div class="list-group" id="sidebarMenu">
            <a href="#" class="list-group-item" ui-sref="galleries" box-sidebar-nav>My Galleries</a>      
            <a href="#" class="list-group-item" ui-sref="social" box-sidebar-nav>Social</a>      
            <a href="#" class="list-group-item" ui-sref="messages" box-sidebar-nav>Messages</a>      
            <a href="#" class="list-group-item" ui-sref="settings" box-sidebar-nav>Settings</a>      
          </div>
        </div>

        <!-- content -->
        <div class="col-md-9" id="mainContent">
          <div ui-view></div>
        </div>
      </div>
    </div>
    
  </body>
</html>
