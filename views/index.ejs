<!DOCTYPE html>
<html>
  <head>
    <title>image box</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/vendors/bootstrap/bootstrap.css' />

    <script type="text/javascript" src='/javascripts/vendors/angular/angular.js'></script>
    <script type="text/javascript" src='/javascripts/vendors/angular-ui-router/angular-ui-router.js'></script>
    <script type="text/javascript" src='/javascripts/app.js'></script>
  </head>
  <body ng-app="image-box">

    <div class="container">
      <div class="row">
        <div class="col-md-12">
          Header
        </div>
      </div>

      <div class="row">

        <!-- navigation menu -->
        <div class="col-md-3">
          <div class="list-group">
            <a href="#" class="list-group-item" ui-sref="galleries">My Galleries</a>      
            <a href="#" class="list-group-item" ui-sref="social">Social</a>      
            <a href="#" class="list-group-item" ui-sref="messages">Messages</a>      
            <a href="#" class="list-group-item" ui-sref="settings">Settings</a>      
          </div>
        </div>

        <!-- content -->
        <div class="col-md-9">
          <div ui-view></div>
        </div>
      </div>
    </div>
    
  </body>
</html>
